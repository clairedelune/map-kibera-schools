{
  "static": {
    "js": {
      "prefix": "static/js",
      "files": [
        "libs/log-safety.js",
        "libs/smooth-scroll.js",
        "libs/utils.js",
        "libs/jquery.js",
        "libs/lodash.js",
        "libs/backbone.js",
        "libs/leaflet.js",
        "libs/fast-levenshtein.js",
        "sticky-nav.js",
        "slider.js",
        "models/school.js",
        "views/filter-widgets.js",
        "school-data-app.js",
        "main.js"
      ],
      "filters": ["concat", "closure"]
    },
    "css": {
      "prefix": "static/css",
      "files": [
        "leaflet.css",

        "variables.scss",
        "icon-font.css",
        "mixins.scss",
        "normalize.css",
        "helpers.scss",
        "base.scss",

        "style.scss",
        "responsive.scss",
        "print.css"
      ],
      "filters": ["concat", "scss", "cssmin"]
    }
  },
  "build": {
    "staging": {
      "cname": "kibera-schools.dgstg.org",
      "root": "/",
      "robots": "static/root/robots-goaway.txt"
    },
    "production": {
      "cname": "schools.mapkibera.org",
      "root": "/",
      "robots": "static/root/robots-welcome.txt"
    }
  }
}
